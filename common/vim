# vim: ft=sh

pushd $HOME
  if [[ ! -d vim ]]; then
    git clone https://github.com/vim/vim
  fi
  pushd vim
    git pull
    ./configure --prefix=$HOME/vim/root \
                 --with-features=huge \
                 --enable-python3interp=dynamic \
                 --enable-rubyinterp=dynamic \
                 --enable-terminal \
                 --enable-multibyte \
                 --enable-fail-if-missing
    make -j 4 install
  popd
popd

mkdir -p $HOME/bin
export PATH=$HOME/bin:$PATH
pushd $HOME/bin
  rm -f vim
  ln -s $HOME/vim/root/bin/vim
popd
